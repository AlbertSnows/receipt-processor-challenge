{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "retailer": {
      "type": "string"
    },
    "purchaseDate": {
      "type": "string",
      "format": "date"
    },
    "purchaseTime": {
      "type": "string",
      "pattern": "^(?:[01]\\d|2[0-3]):[0-5]\\d$"
    },
    "total": {
      "type": "string",
      "format": "currency"
    },
    "items": {
      "type": "array"
    }
  },
  "required": ["retailer", "purchaseDate", "purchaseTime", "total", "items"]
}
